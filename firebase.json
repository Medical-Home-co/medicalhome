{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      ".gitignore",
      "node_modules/**",
      "functions/**"
    ],
    "rewrites": [
      {
        "source": "/firebase-messaging-sw.js",
        "destination": "/firebase-messaging-sw.js"
      },
      {
        "source": "/manifest.json",
        "destination": "/manifest.json"
      },
      {
        "source": "/style.css",
        "destination": "/style.css"
      },
      {
        "source": "/images/**",
        "destination": "/images/**"
      },
      {
        "source": "/js/**",
        "destination": "/js/**"
      },
      {
        "source": "/templates/**",
        "destination": "/templates/**"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}